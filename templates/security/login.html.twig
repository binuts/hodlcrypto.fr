{% extends 'base.html.twig' %}

{% block title %}
    Log in!
{% endblock %}

{% block body %}
<section class="bg-neutral-300 p-4 lg:px-8">
    <div class="container mx-auto">
        <h1 class="text-gray-700 text-2xl font-bold mb-4">Se connecter</h1>

        <form method="post">

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="inputEmail">Email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

            <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
            >

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> <span class="text-gray-700 text-sm font-bold mb-2">Se souvenir de moi</span>
                </label>
            </div>

            <button type="submit" class="bg-neutral-400 hover:bg-neutral-600 text-white font-bold py-2 px-4 rounded">
                Se connecter
            </button>
        </form>
    </div>
</section>
{% endblock %}
