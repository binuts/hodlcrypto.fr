{% extends 'base.html.twig' %}

{% block title %}
    Profil
{% endblock %}

{% block body %}
	<section class="bg-gray-100 p-6 lg:px-12 min-h-screen flex items-center justify-center">
		<div class="bg-white shadow-md rounded-lg p-8 max-w-lg w-full">
			<h1 class="text-gray-800 text-3xl font-bold mb-6 whitespace-nowrap">Mon profil</h1>

			{{ form_errors(profileForm) }}

			{{ form_start(profileForm, {'attr': {'class': 'space-y-6'}}) }}

			<div class="space-y-4">
                <div>
                    {{ form_label(profileForm.email, 'Email') }}
                    {{ form_widget(profileForm.email, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md', 'placeholder': 'Entrez votre email'}}) }}
                </div>
                <div>
                    {{ form_label(profileForm.username, "Nom d'utilisateur") }}
                    {{ form_widget(profileForm.username, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md', 'placeholder': "Entrez votre nom d'utilisateur"}}) }}
                </div>
                <div>
                    {{ form_label(profileForm.password, 'Mot de passe') }}
                    {{ form_widget(profileForm.password, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md', 'placeholder': 'Entrez votre mot de passe'}}) }}
                </div>
			</div>

			<div class="flex justify-end mt-6">
				<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg">
					Valider
				</button>
			</div>


		{{ form_end(profileForm) }}
	</section>
{% endblock %}
