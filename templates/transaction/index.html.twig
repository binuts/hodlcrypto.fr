{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une transaction
{% endblock %}

{% block body %}
	<section class="bg-gray-100 p-6 lg:px-12 min-h-screen flex items-center justify-center">
		<div class="bg-white shadow-md rounded-lg p-8 max-w-lg w-full">
			<h1 class="text-gray-800 text-3xl font-bold mb-6 whitespace-nowrap">Ajouter une transaction</h1>

			{{ form_errors(transactionForm) }}

			{{ form_start(transactionForm, {'attr': {'class': 'space-y-6'}}) }}

			<div class="space-y-4">
				{{ form_widget(transactionForm.crypto, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
				{{ form_widget(transactionForm.quantity, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
				{{ form_widget(transactionForm.transactionType, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
				{{ form_widget(transactionForm.priceAtTransactionInUsdt, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
				{{ form_widget(transactionForm.transactionDate, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md'}}) }}
			</div>

			<div class="flex justify-end mt-6">
				<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg">
					Valider
				</button>
			</div>


		{{ form_end(transactionForm) }}
	</section>
{% endblock %}
