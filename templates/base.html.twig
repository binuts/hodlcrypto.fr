<!doctype html>
<html lang="fr">
  <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      {% block stylesheets %}
          {{ encore_entry_link_tags('app') }}
      {% endblock %}
  </head>

  <body>
    <header>
      {% block header %}
        {% include 'inc/header.html.twig' %}
      {% endblock %}
    </header>

        {# read and display all flash messages #}
        {# if label = success, then display a green message
        if label = error, then display a red message
        if label = warning, then display a yellow message
        if label = info, then display a blue message #}
    {# read and display all flash messages #}
    {% set labels = ['success', 'error', 'warning', 'info'] %}

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        {% if label == 'success' %}
          {% set label_class = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative w-1/2' %}
        {% elseif label == 'error' %}
          {% set label_class = 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative w-1/2' %}
        {% elseif label == 'warning' %}
          {% set label_class = 'bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative w-1/2' %}
        {% elseif label == 'info' %}
          {% set label_class = 'bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative w-1/2' %}
        {% endif %}
        <section class="bg-neutral-300 container w-screen">
          <div class="container mx-auto w-1/2 {{ label_class }}">
              {{ message }}
          </div>
        </section>
      {% endfor %}
    {% endfor %}

    <main>
      {% block body %}{% endblock %}
    </main>

    <footer>
      {% block footer %}
        {% include 'inc/footer.html.twig' %}
      {% endblock %}
    </footer>
    
      {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
      {% endblock %}
  </body>
</html>