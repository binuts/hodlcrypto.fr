<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>

	<body class="min-h-screen flex flex-col">
		<header>
			{% block header %}
				{% include 'inc/header.html.twig' %}
			{% endblock %}
		</header>

		{# read and display all flash messages #}
		{% set labels = ['success', 'error', 'warning', 'info'] %}

		{% for label, messages in app.flashes %}
			{% for message in messages %}
				{% if label == 'success' %}
					{% set label_class = 'bg-green-100 border border-green-400 text-green-700 rounded relative w-1/2 p-4 m-1' %}
				{% elseif label == 'error' %}
					{% set label_class = 'bg-red-100 border border-red-400 text-red-700 rounded relative w-1/2 p-4 m-1' %}
				{% elseif label == 'warning' %}
					{% set label_class = 'bg-yellow-100 border border-yellow-400 text-yellow-700 rounded relative w-1/2 p-4 m-1' %}
				{% elseif label == 'info' %}
					{% set label_class = 'bg-blue-100 border border-blue-400 text-blue-700 rounded relative w-1/2 p-4 m-1' %}
				{% endif %}
				<section class="bg-neutral-300 w-screen flex items-center justify-center">
					<div class="w-1/2 {{ label_class }}">
						<span class="absolute top-0 bottom-0 right-0 px-1 py-1" onclick="this.parentElement.style.display='none';">
							<svg class="fill-current h-6 w-6 text-gray-500" role="button" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
								<title>Fermer</title>
								<path d="M14.348 5.652a.5.5 0 0 0-.707 0L10 9.293 6.36 5.652a.5.5 0 1 0-.707.707L9.293 10l-3.64 3.64a.5.5 0 1 0 .707.707L10 10.707l3.64 3.64a.5.5 0 0 0 .707-.707L10.707 10l3.64-3.64a.5.5 0 0 0 0-.707z"/>
							</svg>
						</span>
						{{ message }}
					</div>
				</section>
			{% endfor %}
		{% endfor %}

		<main class="flex-grow bg-neutral-300"> {% block body %}{% endblock %}
			</main>

			<footer class="bg-neutral-300 text-white py-4">
				{% block footer %}
					{% include 'inc/footer.html.twig' %}
				{% endblock %}
			</footer>
		</body>
	</html>
