{% extends 'base.html.twig' %}

{% block title %}
    Register
{% endblock %}

{% block body %}
<section class="bg-neutral-300 p-4 lg:px-8">
    <div class="container mx-auto">
        <h1 class="text-gray-700 text-2xl font-bold mb-4">Cr√©er un compte</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

        <div class="mb-4">
            {{ form_label(registrationForm.email, 'Email :', {'class': 'block text-gray-700 text-sm font-bold mb-2'}) }}
            {{ form_widget(registrationForm.email, {'class': 'form-input', 'autofocus': true}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.username, 'Pseudo :', {'class': 'block text-gray-700 text-sm font-bold mb-2'}) }}
            {{ form_widget(registrationForm.username, {'class': 'form-input'}) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe :', {'class': 'block text-gray-700 text-sm font-bold mb-2'}) }}
            {{ form_widget(registrationForm.plainPassword, {'class': 'form-input'}) }}
        </div>

        <button type="submit" class="bg-neutral-400 hover:bg-neutral-600 text-white font-bold py-2 px-4 rounded">
            S'enregistrer
        </button>
    </div>

    {{ form_end(registrationForm) }}
</section>
{% endblock %}