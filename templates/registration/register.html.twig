{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<section class="bg-neutral-300 p-4 lg:px-8">
        <div class="flex flex-col w-full md:w-1/2 xl:w-2/5 2xl:w-2/5 3xl:w-1/3 mx-auto p-8 md:p-10 2xl:p-12 3xl:p-14 bg-white rounded-2xl shadow-xl">
            <div class="flex flex-col justify-center mx-auto items-center gap-3 pb-4">
                <div>
                    <img src="{{ asset('img/logo.svg') }}" width="80" alt="Logo hodlcrypto.fr">
                </div>
                <h1 class="text-3xl font-bold text-gray-600 my-auto">HODLCRYPTO</h1>
            </div>
            <div class="text-xl font-light text-gray-500 pb-8 mx-auto">S'inscrire</div>

            {{ form_start(registrationForm) }}

            <div class="flex flex-col">
                <div class="pb-2">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-700'}}) }}
                    <div class="relative text-gray-400">
                        <span class="absolute inset-y-0 left-0 flex items-center p-1 pl-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail">
                                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control pl-12 mb-2 bg-gray-50 text-gray-600 border focus:border-transparent border-gray-300 sm:text-sm rounded-lg ring ring-transparent focus:ring-1 focus:outline-none focus:ring-gray-400 block w-full p-2.5 rounded-l-lg py-3 px-4'}}) }}
                    </div>
                    {# {{ form_errors(registrationForm.email) }} #}
                </div>
                <div class="pb-2">
                    {{ form_label(registrationForm.username, 'Pseudo', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-700'}}) }}
                    <div class="relative text-gray-400">
                        <span class="absolute inset-y-0 left-0 flex items-center p-1 pl-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-asterisk">
                                <rect width="18" height="18" x="3" y="3" rx="2"></rect>
                                <path d="M12 8v8"></path>
                                <path d="m8.5 14 7-4"></path>
                                <path d="m8.5 10 7 4"></path>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control pl-12 mb-2 bg-gray-50 text-gray-600 border focus:border-transparent border-gray-300 sm:text-sm rounded-lg ring ring-transparent focus:ring-1 focus:outline-none focus:ring-gray-400 block w-full p-2.5 rounded-l-lg py-3 px-4'}}) }}
                    </div>
                </div>
                <div class="pb-2">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-700'}}) }}
                    <div class="relative text-gray-400">
                        <span class="absolute inset-y-0 left-0 flex items-center p-1 pl-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-asterisk">
                                <rect width="18" height="18" x="3" y="3" rx="2"></rect>
                                <path d="M12 8v8"></path>
                                <path d="m8.5 14 7-4"></path>
                                <path d="m8.5 10 7 4"></path>
                            </svg>
                        </span>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control pl-12 mb-2 bg-gray-50 text-gray-600 border focus:border-transparent border-gray-300 sm:text-sm rounded-lg ring ring-transparent focus:ring-1 focus:outline-none focus:ring-gray-400 block w-full p-2.5 rounded-l-lg py-3 px-4'}}) }}
                    </div>
                    {# {{ form_errors(registrationForm.plainPassword) }} #}
                </div>
                <button type="submit" class="bg-neutral-400 hover:bg-neutral-600 text-white font-bold py-2 px-4 rounded-lg">
                    S'enregistrer
                </button>
            {# <div class="pt-4">
                <button type="submit" class="inline-flex px-5 py-3 text-white bg-teal-600 hover:bg-teal-700 focus:bg-teal-700 rounded-md">S'enregistrer</button>
            </div> #}

            {{ form_end(registrationForm) }}
        </div>
	</section>
{% endblock %}
